/* Grid Layout */
.company-grid {
    
    display: flex;
    justify-content: space-evenly;
    align-items: center;
    margin: 1rem auto;
    max-width: 1200px;
}

/* Company Buttons */
.company-buttons {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 30px;
    justify-content: center;
    align-items: center;
    


}

.company-buttons button {
    padding: 1.5rem;
    background: linear-gradient(45deg, #6a1b9a, #ff4081);
    color:white;
    font-size: medium;
    font-weight: 600;
    font-family:sans-serif system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
    border:1px solid black;
    border-radius: 5px ;
    cursor: pointer;
    transition: transform 0.2s ease-in-out;
    
    
    
}

.company-buttons button:hover {
    background-color: palevioletred;
    animation: bounce 0.5s ease-in-out;
    
    
}

@keyframes bounce {
  0%, 100% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-10px);
  }
}



/* Responsive Design */
@media (max-width: 800px) {
    .company-grid {
        grid-template-columns: 1fr;
    }
}

     </style>
